<!DOCTYPE html>
<html>
  <head>
    <title>My Telly</title>
    <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css" />
  </head>
  <body>
    <header>
      <h3>My Telly</h3>
      <nav>
        <a href="/shows">shows</a>
        <a href="/actors">actors</a><a href="/">Login</a>
      </nav>
    </header>

    <main>
      <aside>
        <h5>Top Actors</h5>

        <% actors.forEach(row => { %>
        <div>
          <img src="<%= row.actorimg %>" width="30px" />
          <%= row.actorname %>
        </div>
        <% }); %>

        <hr />
      </aside>

      <% shows.forEach(row=> { const details = `${row.descript.slice(0,
      70)}...`; %>
      <div>
        <img width="100px" src="<%= row.imgpath %>" />
        <span>
          <b> <%= row.showname %></b>
          <%= details %>
        </span>

        <%# This creates a a route with a paramater path using data from each
        row of DB table data to create a unique path (URL)...
        localhost:3000/shows/1000 ... localhost:3000/shows/1005 ... %>

        <a href="shows/<%=row.id%>">more</a>
      </div>
      <hr />

      <% }); %>
    </main>
  </body>
</html>
